<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2931"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment">

    <EditText
        android:id="@+id/edtSarlavha"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/edt_style"
        android:fontFamily="@font/my_font"
        android:hint="Sarlavha"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="#D9DDCC"
        android:textSize="22sp" />

    <FrameLayout
        android:id="@+id/edtFocus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="6dp"
        android:layout_weight="1"
        android:background="@drawable/edt_style">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <EditText
                android:id="@+id/edtBatafsil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/my_font"
                android:hint="Batafsil"
                android:textColor="@color/white"
                android:textColorHint="#D9DDCC"
                android:textSize="22sp" />
        </ScrollView>
    </FrameLayout>

    <EditText
        android:id="@+id/edtMuddat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/edt_style"
        android:fontFamily="@font/my_font"
        android:hint="Muddat"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="#D9DDCC"
        android:textSize="22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2FAD64"
        android:fontFamily="@font/my_font"
        android:text="Saqlash"
        android:textColor="#D6FFEA"
        android:textSize="22sp"
        app:cornerRadius="50dp" />
</LinearLayout>